<h2>Search Authors</h2>
<form action="/authors" method="GET">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= searchOption.name%>" />
  <!-- searchOption.name comes from the authors searchOption.name -->
  <button type="submit">Search</button>
</form>
<br />
<% author.forEach(author => { %>
<div><%= author.name %></div>
<% }) %>
